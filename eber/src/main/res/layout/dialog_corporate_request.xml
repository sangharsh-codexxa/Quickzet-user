<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvProductFilter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:background="@color/color_white"
    android:visibility="visible"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/dialog_elevation">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_app_theme_bg"
        android:gravity="center"
        android:orientation="vertical">


        <com.elluminati.eber.components.MyAppTitleFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:paddingStart="@dimen/activity_margin_register"
            android:paddingEnd="@dimen/activity_margin_register"
            android:text="@string/text_corporate_request"
            android:textColor="@color/color_app_text_dark"
            android:textSize="@dimen/size_general" />


        <com.elluminati.eber.components.MyFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_padding"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:text="@string/msg_corporate_request"
            android:textColor="@color/color_app_text"
            android:textSize="@dimen/size_general_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_horizontal_margin"
            android:layout_marginEnd="@dimen/dimen_horizontal_margin"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <com.elluminati.eber.components.MyAppTitleFontTextView
                android:id="@+id/tvCorporateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Robot"
                android:textColor="@color/color_app_text"
                android:textSize="@dimen/size_general" />

            <com.elluminati.eber.components.MyAppTitleFontTextView
                android:id="@+id/tvCorporatePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="9924687377"
                android:textColor="@color/color_app_text"
                android:textSize="@dimen/size_general" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:orientation="vertical">

            <com.elluminati.eber.components.MyFontButton
                android:id="@+id/btnYes"
                android:layout_width="@dimen/dialog_button_size"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_rect_shape_blue"
                android:text="@string/text_yes"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="@dimen/size_general_small">

            </com.elluminati.eber.components.MyFontButton>

            <com.elluminati.eber.components.MyFontButton
                android:id="@+id/btnNo"
                android:layout_width="@dimen/dialog_button_size"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/text_no"
                android:textAllCaps="false"
                android:textColor="@color/edit_text_color"
                android:textSize="@dimen/size_general_small" />


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>