<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_padding"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        app:srcCompat="@drawable/place" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_bill_margin_two"
        android:paddingEnd="@dimen/activity_horizontal_padding">

        <com.elluminati.eber.components.MyFontTextView
            android:id="@+id/tvPlaceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rajkot"
            android:textColor="@color/color_app_text"
            android:textSize="@dimen/size_general" />

        <com.elluminati.eber.components.MyFontTextView
            android:id="@+id/tvPlaceAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="India"
            android:textColor="@color/color_app_text"
            android:textSize="@dimen/size_label" />

        <View
            android:id="@+id/viewDiveCountry"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginTop="@dimen/dimen_bill_margin_two"
            android:background="@color/color_app_divider_horizontal">

        </View>
    </LinearLayout>
</LinearLayout>