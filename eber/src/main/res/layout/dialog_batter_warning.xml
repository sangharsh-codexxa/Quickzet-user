<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvProductFilter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:background="@color/color_white"
    android:visibility="visible"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/dialog_elevation">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_app_theme_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen_bill_line"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/dimen_bill_line"
        android:paddingBottom="@dimen/dimen_bill_line">


        <com.elluminati.eber.components.MyFontTextView
            android:id="@+id/tvDriverNameDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Warning"
            android:textColor="@color/color_app_text"
            android:textSize="@dimen/size_name" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.elluminati.eber.components.MyFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/feedback_margin_two"
                android:paddingTop="@dimen/dimen_bill_line"
                android:visibility="gone"
                android:text="@string/text_comment_caps"
                android:textAllCaps="false"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_app_label"
                android:textSize="@dimen/size_label" />

            <TextView
                android:id="@+id/etDialogComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/feedback_margin_two"
                android:layout_marginEnd="@dimen/feedback_margin_two"
                android:ems="10"
                android:gravity="top"
                android:hint="Please turn off battery saver mode for better experience."
                android:maxLines="3"
                android:minLines="2"
                android:textColor="@color/color_app_text"
                android:textSize="@dimen/size_general" />

        </LinearLayout>

        <com.elluminati.eber.components.MyFontButton
            android:id="@+id/btnDialogDisablePowerSaver"
            android:layout_width="@dimen/dialog_button_size"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:background="@drawable/selector_rect_shape_blue"
            android:text="Disable Now"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:textSize="@dimen/size_general_small" />

    </LinearLayout>
</androidx.cardview.widget.CardView>