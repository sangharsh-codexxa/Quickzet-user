<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvProductFilter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:background="@color/color_white"
    android:visibility="visible"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/dialog_elevation">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_app_theme_bg"
        android:orientation="vertical">

        <com.elluminati.eber.components.MyAppTitleFontTextView
            android:id="@+id/tvDialogMessageEnable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:text="@string/text_verify_detail"
            android:textColor="@color/color_app_text_dark"
            android:textSize="@dimen/size_general" />


        <com.elluminati.eber.components.MyFontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimen_bill_line"
            android:text="@string/msg_verify_detail"
            android:textColor="@color/color_app_text"
            android:textSize="@dimen/size_general_small" />


        <com.elluminati.eber.components.MyFontEdittextView
            android:id="@+id/etEmailVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:ems="10"
            android:hint="@string/text_email_otp"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/edit_text_color"
            android:textColorHint="@color/color_app_label"
            android:visibility="gone" />


        <com.elluminati.eber.components.MyFontEdittextView
            android:id="@+id/etSMSVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:ems="10"
            android:hint="@string/text_phone_otp"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="@color/edit_text_color"
            android:textColorHint="@color/color_app_label"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="vertical">

            <com.elluminati.eber.components.MyFontButton
                android:id="@+id/btnVerify"
                android:layout_width="@dimen/dialog_button_size"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_rect_shape_blue"
                android:text="@string/text_verify"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="@dimen/size_general_small">

            </com.elluminati.eber.components.MyFontButton>

            <com.elluminati.eber.components.MyFontButton
                android:id="@+id/btnVerifyCancel"
                android:layout_width="@dimen/dialog_button_size"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/text_cancel"
                android:textAllCaps="false"
                android:textColor="@color/edit_text_color"
                android:textSize="@dimen/size_general_small" />


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>